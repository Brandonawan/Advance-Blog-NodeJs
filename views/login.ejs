<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>
  <br />

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <% if(message) {%>
                <div class="alert alert-primary" role="alert">
                  <%= message %>
                </div>
                <% } %>
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" autocomplete="username" required autofocus>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" autocomplete="password" id="myPassword" required>
              <input type="checkbox" onclick="showPassword()"> Show Password
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
          <p>Don't an account? <a href='/register' button type="submit" class="btn btn-dark">Register</a></p>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>