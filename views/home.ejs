<%- include('partials/header.ejs'); -%>
<h1>Home</h1>
<p><%= StartingContent %> </p>

<form>
    <input id="search" type="text" placeholder="search post" />
    <button id="button" type="button">Search</button>
</form>

<% posts.reverse().forEach(function(post) { %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content && post.content.length >= 100 ? post.content.substring(0, 100) + "..." : post.content %>
        <a href="/post/<%= post.title %>">Read More</a>
    </p>
    <form action="/delete/<%= post._id %>" method="POST">
        <button>Delete</button>
    </form>
    <br />
    <a href="/post/<%= post._id %>/edit"><button>Edit</button></a>

    <p>Posted on <%= post.createdAt %></p>
    <p><%= post.updatedAt %></p>
<% }) %>

<%- include('partials/footer.ejs'); -%>	